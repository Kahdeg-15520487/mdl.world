}

###

# Update an existing world
PUT {{baseUrl}}/World/{{worldId}}
Content-Type: application/json

{
  "id": "{{worldId}}",
  "name": "Updated World Name",
  "description": "Updated description",
  "worldInfo": {
    "genre": "Fantasy",
    "timeEra": "Medieval",
    "magicLevel": "High",
    "technologyLevel": "Renaissance"
  },
  "places": [],
  "historicFigures": [],
  "worldEvents": [],
  "equipment": [],
  "spellBooks": [],
  "runesOfPower": [],
  "alchemyRecipes": [],
  "technicalSpecs": []
}

###

# Copy an existing world
POST {{baseUrl}}/World/{{worldId}}/copy
Content-Type: application/json

{
  "newName": "Copied World Name"
}

###

# Enhance an existing world (loads from storage if exists)
POST {{baseUrl}}/World/{{worldId}}/enhance
Content-Type: application/json

{
  "worldName": "Enhanced World",
  "contentType": "characters"
}

###

# Export world as JSON file
GET {{baseUrl}}/World/{{worldId}}/export
Accept: application/json

###

# Import a world from JSON
POST {{baseUrl}}/World/import
Content-Type: application/json

{
  "id": "imported-world-id",
  "name": "Imported World",
  "description": "A world imported from JSON",
  "worldInfo": {
    "genre": "Fantasy",
    "timeEra": "Medieval",
    "magicLevel": "High",
    "technologyLevel": "Renaissance"
  },
  "places": [],
  "historicFigures": [],
  "worldEvents": [],
  "equipment": [],
  "spellBooks": [],
  "runesOfPower": [],
  "alchemyRecipes": [],
  "technicalSpecs": []
}

###

# Delete a world
DELETE {{baseUrl}}/World/{{worldId}}
Accept: application/json

###

# Get world wiki (loads from storage if exists)
GET {{baseUrl}}/World/{{worldId}}/wiki
Accept: text/html

###

# Get place wiki (loads from storage if exists)
GET {{baseUrl}}/World/{{worldId}}/wiki/place/{{placeId}}
Accept: text/html

###

# Get character wiki (loads from storage if exists)
GET {{baseUrl}}/World/{{worldId}}/wiki/character/{{characterId}}
Accept: text/html

###

# Get item wiki (loads from storage if exists)
GET {{baseUrl}}/World/{{worldId}}/wiki/item/{{itemId}}
Accept: text/html

@baseUrl = https://localhost:7000
@worldId = sample-world-id
@placeId = sample-place-id
@characterId = sample-character-id
@itemId = sample-item-id
